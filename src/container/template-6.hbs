<header class="header">
    <a href="#test">
        {{>logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>



<main class="main">


    {{#with info}}
    <div class="info">
        <div class="info_content">
            <h1 class="info_title">{{title}}</h1>
            <p class="info_text">{{description}}</p>
        </div>
    </div>
    {{/with}}


    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="fofm_line"> </div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}

</main>

{{#with updates}}
<div class="messages">
    <h1 class="messages_title">{{title}}</h1>
    {{#each list}}
    <div class="msg">

        <div class="msg_square">32x32</div>
        <div class="msg_media">
            <strong class="msg_name msg_name_{{nickname}}">{{nickname}}</strong>
            <p class="msg_text">{{description}}</p>
            <div class="fofm_line"> </div>
        </div>

    </div>
    {{/each}}
    <a href="{{show_all.url}}" class="messeges_link">{{show_all.text}}</a>
</div>
{{/with}}


<div class="expirience_one">
    {{#with expirience}}
    <span class="badge_hot">{{badge}}</span>

    <h1 class="expirience_title">{{title}}</h1>


    <div class="advantages">
        {{#each list}}
        <div>
            <strong>{{name}}</strong>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>
<footer class="footer" id="test">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="foter_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>